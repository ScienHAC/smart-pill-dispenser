# Ensure line endings are normalized
* text=auto

# Treat Python and JavaScript files as text
*.py text
*.js text
*.jsx text
*.ts text
*.tsx text

# Keep JSON and YAML files readable
*.json text
*.yaml text
*.yml text

# Prevent binary files from being altered
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.mp4 binary
*.zip binary
